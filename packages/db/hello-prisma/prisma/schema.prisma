generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  username          String    @unique
  email             String    @unique
  fullname          String
  password          String    
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  meetingsHosted    Meeting[] @relation("Meeting_host")
  meetingsJoined    Meeting[] @relation("MeetingParticipants")
}

model Meeting {
  id                Int       @id @default(autoincrement())
  meetingId         String    @unique
  hostId            Int       
  host              User      @relation("Meeting_host", fields: [hostId], references: [id])
  participants      User[]    @relation("MeetingParticipants")
  createdAt         DateTime  @default(now())
  mergedPath        String?
}